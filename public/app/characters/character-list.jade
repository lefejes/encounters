.container.top-padding-med
  a.btn.btn-primary(ng-click="createCharacter()") Add Character
  .pull-right
    form.form-inline
      .form-group
        input.form-control(ng-model="searchText", placeholder="Filter")
      .form-group.margin-left-med
        select.form-control(ng-model="sortOrder",
          ng-options="item.value as item.text for item in sortOptions")
  table.table.table-hover.table-striped.table-condensed
    thead
      tr
        th Name
        th Initiative Bonus
        th Type
        th Group
      tbody
        tr(ng-repeat="character in characters | filter:searchText | orderBy:sortOrder")
          td 
            button.btn-link(ng-click="updateCharacter(character)") {{character.name}}
          td {{character.initiativeBonus}}
          td {{character.charType}}
          td {{character.group}}
