.container
  .input-group(ng-hide="encounter.isSelected")
    select.form-control(ng-model="selectedEncounter")
      option(value="" selected) Select an encounter
      option(ng-repeat="encounter in encounters", value="{{encounter}}") {{encounter.title}}
    .input-group-btn
      button.btn.btn-default(ng-click="selectEncounter()") Select
     
  .panel(ng-show="encounter.isSelected")
    .panel-header
      h1 {{encounter.title}}, Round: {{encounter.round}}
      .pull-right
        button.btn.btn-primary(ng-click="next()") Roll Initiative
    .panel-body
      table.table.table-hover.table-striped.table-condensed
        thead
          tr
            th Name
            th Type
            th Initiative
          tbody
            tr(ng-repeat="character in encounter.characters | orderBy: 'initiative' : true")
              td {{character.name}}
              td {{character.charType}}
              td {{character.initiative}}
    .panel-footer
      button.btn.btn-default(ng-click="close()") Close Encounter
